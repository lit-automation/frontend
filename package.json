{
  "name": "lit-frontend",
  "version": "1.0.0",
  "main": "src/index",
  "author": "Wim Spaargaren <wim_spaargaren@live.nl>",
  "repository": "",
  "license": "UNLICENCED",
  "contributors": [],
  "scripts": {
    "analyze": "npm-run-all -l analyze:*",
    "analyze:stats": "webpack --profile --json > analysis.json",
    "analyze:analyze": "webpack-bundle-analyzer analysis.json",
    "build": "webpack",
    "build:prod": "webpack --env.NODE_ENV=production --optimize-minimize",
    "clean": "npm-run-all -l clean:*",
    "clean:lighthouse": "del-cli *.report.html",
    "dev": "webpack-dev-server --stdin --hot --inline --port 8081 --history-api-fallback --host 0.0.0.0",
    "serve": "http-server dist",
    "start": "npm-run-all -l build serve",
    "test": "npm-run-all -l build -p -l test:lint test:unit test:performance",
    "test-s": "npm-run-all -l build test-s:*",
    "test-s:lint": "npm-run-all -l test:lint:*",
    "test-s:unit": "npm-run-all -l test:unit:*",
    "test:lint": "npm-run-all -p -l test:lint:*",
    "test:lint:tsc": "tsc -p tsconfig.json --noEmit",
    "test:lint:tslint": "tslint -p tsconfig.json -c tslint.json",
    "test:lint:stylelint": "stylelint src/**/*.pcss",
    "test:performance": "npm-run-all -p -l test:performance:*",
    "test:performance:lighthouse": "concurrently --kill-others \"http-server dist\" \"lighthouse --view http://localhost:8080\" ",
    "test:unit": "npm-run-all -p -l test:unit:*",
    "test:unit:ava": "ava"
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "src/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sources": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@types/google-protobuf": "3.7.2",
    "@types/qrcode": "1.3.4",
    "autoprefixer": "9.1.2",
    "ava": "1.0.1",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "4.5.2",
    "cssnano": "4.1.0",
    "ejs-loader": "0.3.3",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "3.2.0",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "postcss": "8.2.10",
    "postcss-custom-media": "6.0.0",
    "postcss-discard-comments": "4.0.0",
    "postcss-easy-import": "3.0.0",
    "postcss-loader": "3.0.0",
    "postcss-mixins": "6.2.0",
    "postcss-nesting": "6.0.0",
    "postcss-preset-env": "6.6.0",
    "postcss-reporter": "6.0.0",
    "postcss-selector-not": "3.0.1",
    "script-ext-html-webpack-plugin": "2.0.1",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "text-loader": "0.0.1",
    "ts-loader": "4.5.0",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "6.0.0",
    "webpack": "4.41.5",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "^3.11.0",
    "workbox-webpack-plugin": "3.4.1"
  },
  "dependencies": {
    "@types/node": "10.9.2",
    "@types/redux-logger": "3.0.7",
    "@vaadin/router": "1.5.2",
    "@weavedev/redux-async": "0.1.3",
    "@weavedev/store": "0.1.7",
    "@webcomponents/webcomponentsjs": "2.2.3",
    "lit-element": "^2.0.0",
    "lit-html": "^1.0.0",
    "lit-redux-watch": "0.3.6",
    "lit-translate": "1.1.20",
    "qrcode": "1.4.4",
    "redux": "4.0.5",
    "redux-logger": "3.0.6",
    "redux-saga": "1.1.3",
    "reselect": "4.0.0",
    "reselect-tools": "0.0.7",
    "typescript": "3.7.5",
    "vivagraphjs": "^0.12.0"
  }
}
